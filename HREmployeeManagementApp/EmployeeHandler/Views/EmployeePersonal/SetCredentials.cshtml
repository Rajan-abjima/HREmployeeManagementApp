<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
            <h3>Set Credentials</h3>
            <form asp-controller="EmployeePersonal" asp-action="SignUpFrom" method="post" class="form" role="form">
                <div class="row">
                    <input type="hidden" id="inputEmployeeID" class="form-control m-1" placeholder="EmployeeID" asp-for="EmployeeID" required="">
                    <input type="hidden" id="inputFirstName" class="form-control m-1" placeholder="FirstName" asp-for="FirstName" required="">
                    <input type="hidden" id="inputLastName" class="form-control m-1" placeholder="LastName" asp-for="LastName" required="">
                    
                </div>
                <input class="form-control" id="Username" placeholder="Create Username" type="text" asp-for="UserName" />
                <input class="form-control" id="inputPassword" placeholder="Create Password" type="password" asp-for="Password" />
                <input class="form-control" name="inputConfirmPassword" placeholder="Confirm Password" type="password"/>
                <script>
                    $(document).ready(function () {
                        $('submitForm').click(function (e) {
                            var field1Value = $('inputPassword').val();
                            var field2Value = $('inputConfirmPassword').val();

                            if (field1Value !== field2Value) {
                                e.preventDefault(); // Prevent form submission

                                $('#error-message').text('Confirm password does not with the Password');
                            }
                        });
                    });
                </script>
                <br />
                <br />
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Sign up
                </button>
            </form>
        </div>
    </div>
</div>