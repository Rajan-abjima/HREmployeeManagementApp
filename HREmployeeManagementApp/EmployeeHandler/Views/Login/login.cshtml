@model Management.Entities.EmployeeEntities.EmployeeLogin

@{
    ViewData["Title"] = "Login";
    var errormessage = TempData["Error"];
    var success = TempData["SignUpSuccess"];
}


<div class="container login-container">
    @if (TempData["SignUpSuccess"] != null)
    {
        <div class="alert alert-warning">
            <span>@TempData["SignUpSuccess"]</span>
            <script>alert(@success)</script>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning">
            <span>Sorry! - @TempData["Error"]</span>
            <script>alert(@errormessage)</script>
        </div>
    }
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h3>Employee Login</h3>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control m-2" placeholder="Your Username *" value="" asp-for="UserName" required/>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control m-2" placeholder="Your Password *" value="" asp-for="Password" required/>
                </div>
                <div class="form-group m-3">
					<input type="submit" class="btnSubmit" value="Login" />
					<p class=" m-1">New Here? Then please <a asp-controller="EmployeePersonal" asp-action="EmployeeRegistration">SignUp</a> </p>
                </div>
            </form>
        </div>
        <div class="col-md-6 login-form-2">
            <h3>Administrator Login</h3>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control m-2" placeholder="AdminID *" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control m-2" placeholder="Admin Password *" value="" />
                </div>
                <div class="form-group m-3">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
            </form>
        </div>
    </div>
</div>