@model EmployeeRegularization

<style>
form{
    background-image: linear-gradient(rgba(white, .1),rgba(white, .1)) !important;
}


</style>


<form class="bg-light p-4 modal fade" id="" asp-action="RegularizeRequest" method="post">
    <a href="#" rel="modal:close"><h2 class="float-end">&times;</h2></a>
    <h1>Regularization Form</h1>
    <div class="row mt-3">
        <div class="col">
            <label for="AttendanceDate">Attendance Date *</label>
            <input type="date" class="form-control input-sm" placeholder="" readonly value=@Model.RegularizeDate.ToString("yyyy-MM-dd") asp-for="RegularizeDate">
        </div>
        <div class="col">
            <label for="reason">Reason *</label>
            <select onchange="myFunction()" class="custom-select" id="reason" required asp-for="Reason">
                <option disabled selected hidden>PLease select a reason</option>
                <option value="Forgot To check In">Forgot To check In</option>
                <option value="Forgot To check Out">Forgot To check Out</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="row my-3 col">
            <div class="col">
                <label>Check In - Recorded</label>
                <input type="time" class="form-control input-sm" readonly value="@Model.CheckedIn.TimeOfDay">
            </div>
            <div class="col mt-2">
                <label>Check Out - Recorded</label>
                <input type="time" class="form-control input-sm" readonly value="@Model.CheckedOut.TimeOfDay">
            </div>
        </div>
        <div class="row my-3 col" id="SetChecks">
            <div class="col">
                <label>Set Check In *</label>
                <input id="setCheckIn" type="time" step="1" class="form-control input-sm" required asp-for="CheckInTime">
            </div>
            <div class="col mt-2">
                <label>Set Check Out *</label>
                <input id="setCheckOut" type="time" step="1" class="form-control input-sm" required asp-for="CheckOutTime">
            </div>
        </div>
    </div>
    <div class="row mx-auto my-3">
        <input class="btn btn-outline-primary col" type="submit">
    </div>
</form>