@model AttendanceViewModel

@section head{
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">
	<link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css' rel='stylesheet'>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
	<script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
}

@{
	var employeeID = Context.Request.Query["EmployeeID"];
}

<style>
	table{
		table-layout: fixed;
		width: 100%;
	}

	.modal{
		height: fit-content !important;
		padding: 0;
		border: 2px #0062cc solid !important;
	}

	.close-modal{
		display: none !important;
	}

	.regularizelink {
		visibility: hidden;
	}

	.regularize:hover > td > .regularizelink {
		visibility: visible;
	}
</style>

<section id="tabs" class="project-tab">
	<div class="container">
		<div class="row">
			<div class="col-md-11">
				<nav>
					<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
						<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" role="tab" aria-controls="nav-home" aria-selected="true">Attendance Details</a>
						<a href="@Url.Action("Leave", "AttendancePersonal", new {EmployeeID = employeeID})" class="nav-item nav-link">Apply Leave</a>
						<a href="@Url.Action("RegularizationForm", "AttendancePersonal", new {EmployeeID = employeeID})" class="nav-item nav-link">Regularization Form</a>
					</div>
				</nav>
				
				<div class="tab-content" id="nav-tabContent">
					<div class="tab-pane fade show active row" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
						<table id="myTable" class="table table-striped table-light col-lg-auto" cellspacing="0">
							<thead>
								<tr>
									<th>Date</th>
									<th>Check In</th>
									<th>Check Out</th>
									<th>Status</th>
									<th>Altered</th>
								</tr>
							</thead>
							<tbody></tbody>
						</table>
						@*<tbody id="" data-employee-id="@TempData["EmployeeIDForAttendance"]">

							<!------------------------Partially Adding Attendance List based on filters---------------------------->
						</tbody>*@
					</div>
				</div>
			</div>
			<div class="col-1">
				<button class="btn btn-light" id="allFilters" type="button" style="float:right;" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-title="Filters">
					<img src="~/funnel.svg" width="25px" height="auto" />
				</button>
			</div>
			<div hidden>
				<div data-name="popover-content">
					<div>
						<input class="form-control form-control-sm mt-1" type="date" id="fromDate" />
						<input class="form-control form-control-sm mt-1" type="date" id="toDate" />
						<select class="dropdown mt-1" style="width:100%" id="statusFilter">
							<option value="">All</option>
							<option value="Present">Present</option>
							<option value="Absent">Absent</option>
							<option value="Leave">Leave</option>
						</select><br>
						<button type="button" class="btn btn-outline-dark mt-1" onclick="filterTable()">Filter</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>


	<script>
		function filterTable() {
			var fromDate = document.getElementById("fromDate").value;
			var toDate = document.getElementById("toDate").value;
			var statusFilter = document.getElementById("statusFilter").value;
			var employeeID = @TempData["EmployeeIDForAttendance"]; 

			$.ajax({
				type: "GET",
				url: "/AttendancePersonal/AttendanceDetailsPartial",
				dataType: 'html',
				data: {
					employeeID: employeeID,
					fromDate: fromDate,
					toDate: toDate,
					status: statusFilter,
				},
				success: function (data) {
					$('#myTable tbody').html($(data).find('tbody').html());
					//$('#myTable').DataTable({
					//	"lenghtMenu": [ 10, 25, 50, 100 ],
					//	"order": [[0, 'asc'], [1, 'asc']]
					//});
				},
				error: function (error) {
					console.log(error);
				}
			});
		}

		
		$(document).ready(function () {
		 filterTable();
		});
	</script>

	<script>
		$(document).ready(function () {

			var options = {
				html: true,
				content: $('[data-name="popover-content"]')
			}
			var exampleEl = document.getElementById('allFilters')
			var popover = new bootstrap.Popover(exampleEl, options)
		})
	</script>

	<script>
		$(document).ready(function () {
			$('#myTable').dataTable({
				//data:data
			});
		});
	</script>
}




