@model AttendanceViewModel

@section head{
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<link href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
	<script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
}

@{
	var employeeID = Context.Request.Query["EmployeeID"];
}

<style>
	table{
		table-layout: fixed;
		width: 100%;
	}
</style>

<section id="tabs" class="project-tab">
	<div class="container">
		<div class="row">
			<div class="col-md-11">
				<nav>
					<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
						<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" role="tab" aria-controls="nav-home" aria-selected="true">Attendance Details</a>
						<a href="@Url.Action("Leave", "AttendancePersonal", new {EmployeeID = employeeID})" class="nav-item nav-link">Apply Leave</a>
						<a href="@Url.Action("RegularizationForm", "AttendancePersonal", new {EmployeeID = employeeID})" class="nav-item nav-link">Regularization Form</a>
					</div>
				</nav>
				
				<div class="tab-content" id="nav-tabContent">
					<div class="tab-pane fade show active row" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
						<table class="table col-lg-auto" cellspacing="0">
							<thead>
								<tr>
									<th>
										Date <br>
										<input style="width:25px" type="date" id="fromDate" />
										<input style ="width:25px" type="date" id="toDate" />
										<button type="button" onclick="filterTable()">Filter</button>
									</th>
									<th>Check In</th>
									<th>Check Out</th>
									<th>
										Status
										<br>
										<select id="statusFilter">
											<option value="">All</option>
											<option value="Present">Present</option>
											<option value="Absent">Absent</option>
											<option value="Leave">Leave</option>
										</select>
										<button type="button" onclick="filterTable()">Filter</button>
									</th>
									<th>Regularized</th>
								</tr>
							</thead>
						</table>
						<div id="myTable" data-employee-id="@TempData["EmployeeIDForAttendance"]">
							<!------------------------Partially Adding Attendance List based on filters---------------------------->
						</div>
					</div>
				</div>
			</div>
			<button class="btn btn-light col-1" type="button" style="float:right;"><img src="~/funnel.svg" width="25px" height="auto" /></button>
		</div>
	</div>
</section>

@section scripts {
	<script>
		function filterTable() {
			var fromDate = document.getElementById("fromDate").value;
			var toDate = document.getElementById("toDate").value;
			var statusFilter = document.getElementById("statusFilter").value;
			var employeeID = @TempData["EmployeeIDForAttendance"]; 

			$.ajax({
				type: "GET",
				url: "/AttendancePersonal/AttendanceDetailsPartial",
				data: {
					employeeID: employeeID,
					fromDate: fromDate,
					toDate: toDate,
					status: statusFilter
				},
				success: function (data) {
					
					$("#myTable").html(data);		
				},
				error: function (error) {
					console.log(error);
				}
			});
		}

		
		$(document).ready(function () {
			filterTable();
		});
	</script>
}















