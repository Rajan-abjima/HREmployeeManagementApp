@*@model List<AttendancePersonal>*@

@section head{
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
}

@{
    var employeeID = Context.Request.Query["EmployeeID"];
}
<style>
    nav {
        border-bottom: #eaedef 1px solid;
    }

    .form{
        width: 80%;
        display:grid;
    }

    .form > form {
        margin-left:20%;
    }
</style>

<section id="tabs" class="project-tab">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav>
					<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href=@Url.Action("AttendanceDetails",new{EmployeeID = employeeID}) role="tab" aria-controls="nav-home" aria-selected="false">Attendance Details</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href=@Url.Action("LeaveForm",new{EmployeeID = employeeID}) role="tab" aria-controls="nav-profile" aria-selected="false">Apply Leave</a>
						<a class="nav-item nav-link active" id="nav-contact-tab" data-toggle="tab" role="tab" aria-controls="nav-contact" aria-selected="true">Apply Regularization</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="form">
                            <form>
                                <div class="row">
                                    <div class="col-4">
									    <label for="AttendanceDate">Attendance Date</label>
                                        <input id="AttendanceDate" type="date" class="form-control" placeholder="">
                                    </div>
                                    <div class="row-col-4">
                                        <p>Check In</p>
                                        <input type="time" class="form-control" readonly>
									    <input type="time" class="form-control">
                                    </div>
                                    <div class="col-4">
                                        <input type="time" class="form-control" readonly>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <select class="custom-select">
                                        <option selected hidden>Reason</option>
									    <option value="Forgot To check In">Forgot To check In</option>
									    <option value="Forgot To check Out">Forgot To check Out</option>
									    <option value="Absent">Absent</option>
									    <option value="Leave">Leave</option>
									    <option value="Present">Present</option>
									    </select>
								    </div>
                                </div>
                                <div>
                                    <input class="btn btn-outline-primary" type="submit" >
                                </div>
                            </form>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>

                                    