@model RegularizeViewModel

@section head{
    <!-- Include Bootstrap CDN -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
}

@{
    var employeeID = Context.Request.Query["EmployeeID"];
    var attendanceID = Context.Request.Query["AttendanceID"];
    var tempDate = Context.Request.Query["AttendanceDate"];    
    DateTime attendanceDate = DateTime.Parse(tempDate);
    var checkIn = Context.Request.Query["CheckIn"];
    var checkOut = Context.Request.Query["CheckOut"];
    
}
<style>
    nav {
        border-bottom: #eaedef 1px solid;
    }

    .form{
        width: 80%;
        display:grid;
    }

    .form > form {
        margin-left:20%;        
    }

    h1{
        text-align: center;
    }
</style>

<section id="tabs" class="project-tab">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav>
					<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
@*                        <a class="nav-item nav-link active" id="nav-contact-tab" data-toggle="tab" role="tab" aria-controls="nav-contact" aria-selected="true">Apply Regularization</a>*@
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <div class="form mt-4">
                            <form>
                                <h1>Regularization Form</h1>
                                <div class="row">
                                    <div class="col-4">
									    <label for="AttendanceDate">Attendance Date *</label>
                                        <input onload="setDate()" id="AttendanceDate" type="date" class="form-control input-sm" placeholder="">
                                    </div>
                                    <div class="col-4">
										<label>Check In - Recorded</label>
                                        <input type="time" class="form-control input-sm" readonly >
                                    </div>
                                    <div class="col-4">
                                        <label>Check Out - Recorded</label>
                                        <input type="time" class="form-control input-sm" readonly>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-4">
                                        <label for="reason">Reason *</label>
                                        <select onchange="myFunction()" class="custom-select" id="reason">
										<option value="Forgot To check In" selected>Forgot To check In</option>
									    <option value="Forgot To check Out">Forgot To check Out</option>
									    <option value="Absent">Absent</option>
									    <option value="Leave">Leave</option>
									    <option value="Present">Present</option>
									    </select>
								    </div>
                                    <div class="row col-8" id="SetChecks">
                                        <div class="col-6">
                                            <label>Check In *</label>
                                            <input type="time" class="form-control input-sm">
                                        </div>
                                        <div class="col-6">
                                            <label>Check Out *</label>
                                            <input type="time" class="form-control input-sm">
										</div>
									</div>
                                </div>
                                <div class="row mt-3">
									<input class="btn btn-outline-primary" type="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function myFunction() {
            var x = document.getElementById("reason");
            var selectX = x.value;
            var y = document.getElementById("SetChecks");
            if (selectX === "Absent" || selectX ==="Leave") {
                y.style.display = "none";
            } else{
                y.style.display = "flex"
            }
        }

        function setDate(){
            document.getElementById("AttendanceDate").value = @attendanceDate;
        }
    </script>
</section>

                                    